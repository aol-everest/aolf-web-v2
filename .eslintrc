{
  "root": true,
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "settings": {
    "react": {
      "version": "detect" // Automatically detect the react version
    }
  },
  "env": {
    "node": true,
    "browser": true,
    "amd": true
  },
  "extends": ["eslint:recommended", "next", "plugin:prettier/recommended"],
  "rules": {
    "prettier/prettier": ["error", {}, { "usePrettierrc": true }],
    "react/react-in-jsx-scope": "off",
    "no-unused-vars": [
      "warn",
      { "vars": "local", "args": "none", "ignoreRestSiblings": true }
    ]
  }
}
